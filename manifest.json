{
  "manifest_version": 3,
  "name": "Bookmark Lister",
  "version": "1.0",
  "description": "Lists all your Chrome bookmarks",
  "permissions": ["bookmarks", "sidePanel", "tabs", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}